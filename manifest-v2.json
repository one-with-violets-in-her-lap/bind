{
    "manifest_version": 2,
    "name": "Bind",
    "version": "0.0.2",

    "permissions": ["activeTab", "storage"],

    "description": "Add keyboard shortcuts to any website",

    "icons": {
        "48": "icons/48px.png"
    },

    "browser_action": {
        "default_icon": "icons/48px.png",
        "default_title": "Bind",
        "default_popup": "popup/index.html"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script/main.js"]
        }
    ],

    "background": {
        "scripts": ["background/main.js"]
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "bind@bind.com"
        }
    },

    "commands": {
        "create-shortcut": {
            "suggested_key": {
                "default": "Alt+H"
            },
            "description": "Create a new shortcut for the current website with Bind"
        }
    }
}
